<html lang='en'>
  <head>
    <title></title>
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="vendor/simple-line-icons/css/simple-line-icons.css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
    <link href="css/newdesign.css" rel="stylesheet">
    <link href="css/new-age.min.css" rel="stylesheet">
    <meta http-equiv="Content-Type" const="text/html;charset=UTF-8" />
    <link href="http://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="css/style.css" >
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <style>
      .colo1{
        background-color: #47476b;
      }
      .colo2{
        background-color: #666699;
      }
      .colo3{
        background-color: #f2f2f2;
      }
      .over{
    overflow: scroll;
    width: 100%;
   height: 80%;
      }
      .send{
        position: absolute;
          bottom: 0px;

          right: 0px;
          width: 10%;
          height: 50px;
          z-index: 99;
          background: #fafafa;
          border: none;
          outline: none;
          padding-left: 55px;
          padding-right: 55px;
          color: #666;
          font-weight: 400;
      }
      .full{
        height: 100%;
      }
      #chatroom, #feedback{
        padding: 0px;
        margin-top: 0px;
      }

    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-1 full colo1">
          <form action="/logout">
              <button class="btn">logout</button>
          </form>
        </div>
        <div class="col-3 full colo2">
          <form method="POST" action="/add">
            <input type="hidden" name="id" value="<%= user.id %>">
              <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                  <% } %>
            <input type="text" name="friend">
            <input type="submit" value="Add friend">
          </form>
          <form method="POST" action="/friends">
              <input type="hidden" name="id" value="<%= user.id %>">
              <input type="submit" value="friend"/>
          </form>
        </div>

        <div class="col-5 full colo3">
          <nav class="navbar navbar-light bg-faded" style='background-color:#e6e6e6;'>
            <a class='navbar-brand'>Daryl Christian Rabanos</a>
            <a class="navbar-item" href="#"><span class='fa fa-gear fa-2x'></span></a>
          </nav>
          <div class="over">
            <section id="chatroom">
              <section id="feedback"></section>
            </section>
          </div>

            <input id="user" type="hidden" value="<%= user.username %>"/>
            <input id="message" type="text" class="form-control textarea" placeholder="Type Message Here">
            <button id="send_message" class="btn btn-default send" type="submit">Send</button>

        </div>

        <div class="col-3 full colo2">

          <button class='btn btn-secondary' id="modalBtn">Update Profile</button>
          <div class="simpleModal" id="modal">
            <div class="modal-content">
              <span class="closeBtn">&times;</span>
              <h1>User Information</h1>
              <form action="/update" method="post">
                <div class="form-group">
                  <input type="number" hidden name="id", value="<%= user.id %>">
                 <label>Name</label>
            		   <input type="text" class="form-control" name="name" value="<%= user.name %>">
            			<label>Address</label>
            			<input type="text" class="form-control" name="address" value="<%= user.address %>">
                  <label>Gender</label>
            			<select name="gender" class="form-control">
                    <% if(user.gender == 'f'){ %>
                      <option value="" disabled="disabled">Choose Gender</option>
                      <option value='m'>Male</option>
                      <option value='f' selected="selected">Female</option>
                    <% }else if(user.gender == 'm'){ %>
                      <option value="" disabled="disabled">Choose Gender</option>
                      <option value='m' selected="selected">Male</option>
                      <option value='f'>Female</option>
                    <% }else{ %>
                      <option value="" disabled="disabled" selected="selected">Choose Gender</option>
                      <option value='m'>Male</option>
                      <option value='f'>Female</option>
                    <% } %>

            			</select>
            			<label>Interests</label>
            			<input type="text" class="form-control" name="interest" value="<%= user.interests %>">
            			<label>Picture</label>
            			<input type="file" name="doc">
                </br>
            		<button type="submit" class="btn btn-warning">Update Info</button>
              </div>
              </form>

            </div>
          </div>
        </div>

      </div>
    </div>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="js/chat.js"></script>
  </body>
</html>
